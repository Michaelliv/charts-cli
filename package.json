{
  "name": "charts-cli",
  "version": "0.2.0",
  "description": "Render ECharts configurations to SVG/PNG from the command line â€” schema-driven, built for AI agents",
  "type": "module",
  "bin": {
    "charts": "./dist/main.js"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "dev": "node --import tsx src/main.ts",
    "build": "tsc && mkdir -p dist/schemas/generated && cp src/schemas/generated/*.json dist/schemas/generated/ && cp src/themes/*.json dist/themes/",
    "prepublishOnly": "npm run build",
    "generate:schema": "bun run src/schemas/generate.ts",
    "lint": "biome check src/",
    "format": "biome format --write src/"
  },
  "keywords": [
    "chart",
    "charts",
    "svg",
    "png",
    "cli",
    "echarts",
    "render",
    "schema",
    "agent",
    "ai",
    "visualization"
  ],
  "author": "miclivs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/michaelliv/charts-cli"
  },
  "dependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "echarts": "^5.5.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "bun-types": "^1.1.34",
    "typescript": "^5.9.3",
    "typescript-json-schema": "^0.67.1"
  }
}
